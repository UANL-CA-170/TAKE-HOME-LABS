  pinMode(pSW2, INPUT);
  pinMode(pSW3, INPUT);
  pinMode(pHMI, INPUT);
  pinMode(pCtrl, INPUT);
  pinMode(pObs, INPUT);
  pinMode(pLEDON, OUTPUT);
  pinMode(pLEDOFF, OUTPUT);

  //-- Determina ganancias --// 
  float p11 = R1*C1, p12 = R1*C2, p21 = R2*C1, p22 = R2*C2;
  Am11 = -1/p11 - 1/p21;
  Am12 = 1/p21;
  Am21 = 1/p22;
  Am22 = -1/p22;
  Bm1 = 1/p11;
  Bm2 = 0;

  float sum_ai = -(a1r  + a2r + a3r);
  float prod_ai = -( a1r*a2r - a1i*a2i )*a3r;
  Kpi = p11*p22*prod_ai;
  K1i = p11*(sum_ai - 1/(p11) - 1/(p21) - 1/(p22) );
  K2i = p11*(p22*(a1r*a3r + a2r*a3r + a1r*a2r)+1/(p21));

  float sum_ac = -(a1r + a2r);
  float prod_ac = a1r*a2r - a1i*a2i;  
  K1c = p11*(sum_ac - 1/p11 - 1/p21 - 1/p22);
  K2c = p12*p22*(prod_ac - 1/(p11*p22) - 1/(p21*p21) - K1c/(p21*p22) + 1/(p21*p22));
  Kpc = K1c + K2c + 1;

  float sum_b = -(b1r + b2r);
  float prod_b = b1r*b2r - b1i*b2i;
  H2 = sum_b - 1/p11 - 1/p22 - 1/p22;
  H1 = p22*(prod_b - ((1/p11 + 1/p21)*(1/p22 + H2))) + 1/p21;

  TIC = millis();
  setupTimer2(); // Inicializa Timer2
  }

